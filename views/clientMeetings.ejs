<%- include('./partials/head') %>

<body>
    <%- include('./partials/nav') %>

        <main class="main">

            <nav class="breadcrumb">
                <ul class="breadcrumb__list">
                    <li class="breadcrumb__item"><a href="/" class="breadcrumb__link">Home</a></li>
                    <li class="breadcrumb__item"><a href="/consulting" class="breadcrumb__link">Consulting</a></li>
                    <li class="breadcrumb__item"><a href="/clientMeetings" class="breadcrumb__link">Client meetings</a></li>
                </ul>
            </nav>

            <form class="form" action="">
                <h1 class="form__header">Create client meetings prompt</h1>
                <% allPrompts.forEach(prompt => { %>      
                    <p class="form__paragraph">
                        <%- prompt.text.replace("{{ Meeting Date and Time }}", '<input class="form__input" type="datetime-local" name="Meeting_Date_and_Time" placeholder="Meeting Date and Time">')
                                       .replace("{{ Meeting Agenda }}", '<input class="form__input" type="textarea" name="Meeting_Agenda" placeholder="Meeting Agenda">')
                                       .replace("{{ Client Contact Information }}", '<input class="form__input" type="text" name="Client_Contact_Information" placeholder="Client Contact Information">') %>
                    </p>

                    <div class="form__container--buttons">
                        <input class="form__button" type="submit" value="Start conversation using this prompt">
                        <input class="form__cancel" type="reset" value="cancel" />
                    </div>
                <% }) %>
            </form>
        
        </main> 
        
        <%- include('./partials/foot') %>
    </div>
</body>

</html>
